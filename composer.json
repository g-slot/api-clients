{
    "name": "g-slot/api-clients",
    "type": "library",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Gilmon\\ApiClients\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gilmon\\Tests\\ApiClients\\": "tests/"
        }
    },
    "require": {
        "psr/http-message": "^1.0",
        "symfony/http-foundation": "^6.0",
        "guzzlehttp/guzzle": "^7.5",
        "spatie/data-transfer-object": "~3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.0",
        "ramsey/uuid": "^4.6.0",
        "vimeo/psalm": "^5.0"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-text",
        "test-coverage": "./vendor/bin/phpunit --coverage-text --coverage-cobertura=coverage.cobertura.xml",
        "test-html-coverage": "./vendor/bin/phpunit --coverage-html=html-coverage"
    }
}
